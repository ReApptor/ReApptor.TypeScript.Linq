{
  "extends": "../tsconfig.workspace.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "lib",
    "rootDir": "./",
    "baseUrl": "./",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "lib/types",
    "paths": {
      "@weare/athenaeum-toolkit": ["../WeAre.Athenaeum.React.Toolkit/src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/__tests__/*", "**/__e2e__/*"],
  "references": [{ "path": "../WeAre.Athenaeum.React.Toolkit"}]
}
