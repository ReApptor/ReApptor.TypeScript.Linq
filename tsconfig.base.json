{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["jest", "node", "googlemaps", "ts-nameof"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2015",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@reapptor/ts-linq": [
        "ReApptor.TypeScript.Linq/src/index.ts"
      ],
      "@reapptor/ts-paged-list": [
        "ReApptor.TypeScript.PagedList/src/index.ts"
      ],
      "@weare/reapptor-react-common": [
        "WeAre.ReApptor.React.Common/src/index.ts"
      ],
      "@weare/reapptor-react-components": [
        "WeAre.ReApptor.React.Components/src/index.ts"
      ],
      "@weare/reapptor-toolkit": [
        "WeAre.ReApptor.React.Toolkit/src/index.ts"
      ]
    },
    "plugins": [{ "transform": "ts-nameof", "type": "raw" }]
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
