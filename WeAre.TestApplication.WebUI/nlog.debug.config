<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

    <!-- enable asp.net core layout renderers -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <!-- the targets to write to -->
    <targets async="true">
        <!-- write logs to file  -->
        <target xsi:type="File" name="allfile"
                fileName="${basedir}/logs/templateappFrontend.log"
                archiveEvery="Day"
                archiveFileName="${basedir}/logs/templateappFrontend.{#}.log"
                archiveNumbering="Date"
                archiveDateFormat="yyyy-MM-dd-HH-mm"
                maxArchiveFiles="2"
                keepFileOpen="false"
                layout="${longdate}|${uppercase:${level}}|${logger}|#browserid:${browserid}|#sessionid:${sessionid}|#country:${country}|#language:${language}|#username:${username}|#useragent:${useragent}|${message} ${exception:format=tostring}" />
    </targets>
    <!-- rules to map from logger name to target -->
    <rules>
        <!--All logs, including from Microsoft-->
        <logger name="Microsoft.*" minlevel="Trace" writeTo="" final="true" />
        <logger name="*" minlevel="Trace" writeTo="allfile" />
    </rules>
</nlog>